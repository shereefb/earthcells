.container#contact_message
  %section.first
    .inner-container
      .row
        .col-md-5#contact_form
          %h1= t(:"contact_page.contact_us")
          = simple_form_for @contact_message, :defaults => {:required => true}, :validate => true do |f|
            = f.input :name, label: t(:"contact_page.labels.name")
            = f.input :email, label: t(:"contact_page.labels.email")
            = f.input :message, label: t(:"contact_page.labels.message")
            = f.submit :submit, value: t(:"contact_page.labels.submit"), class: 'btn btn-info btn-lg', data: { disable_with: t(:"contact_page.labels.submit") }
